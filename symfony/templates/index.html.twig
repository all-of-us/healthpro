{% extends 'base.html.twig' %}
{% block body %}
    <div class="page-header">
        <h2>Welcome!</h2>
    </div>
    <div class="row">
        {% if is_granted('ROLE_USER') and app.session.get('site') %}
            <div class="col-sm-6 col-md-4">
                <a href="/participants" class="btn btn-lg btn-default btn-block"><i class="fa fa-user" aria-hidden="true"></i> Participant Lookup</a>
            </div>
            <div class="col-sm-6 col-md-4">
                <a href="/orders" class="btn btn-lg btn-default btn-block"><i class="fa fa-medkit" aria-hidden="true"></i> Order Lookup</a>
            </div>
            <div class="col-sm-6 col-md-4">
                <a href="/review" class="btn btn-lg btn-default btn-block"><i class="fa fa-list" aria-hidden="true"></i> Participant Review</a>
            </div>
        {% endif %}
        {% if (is_granted('ROLE_USER') and app.session.get('site') and app.session.get('siteOrganization')) or (is_granted('ROLE_AWARDEE') and app.session.get('awardee') and awardeeOrganization) %}
            <div class="col-sm-6 col-md-4">
                <a href="/workqueue" class="btn btn-lg btn-default btn-block"><i class="fa fa-table" aria-hidden="true"></i> Work Queue</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_DV_ADMIN')%}
            <div class="col-sm-6 col-md-4">
                <a href="/problem/reports" class="btn btn-lg btn-default btn-block"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Problem Reports</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_USER') and app.session.get('site') and isDvType and reportKitUrl %}
            <div class="col-sm-6 col-md-4">
                <a data-href="{{ reportKitUrl }}" class="btn btn-lg btn-default btn-block external-link">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Report Kit Problem
                </a>
            </div>
        {% endif %}
        <div class="col-sm-6 col-md-4">
            <a href="/help" class="btn btn-lg btn-default btn-block"><i class="fa fa-question-circle" aria-hidden="true"></i> Help and Training Resources</a>
        </div>
    </div>
{% endblock %}
