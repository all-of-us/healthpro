{% set isTraining = isStable %}
<!doctype html>
<html lang="en">
<head>
    {% include 'base-head.html.twig' %}
    <title>{% block title %}{% endblock %}HealthPro</title>
</head>
<body>
<nav class="navbar navbar-default{% if isTraining %} navbar-inverse navbar-warning-below{% endif %}">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#pmi-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/home') }}">
                <i class="fa fa-star" aria-hidden="true"></i> HealthPro
                {% if isTraining %}
                    <div class="navbar-brand-subtitle">training</div>
                {% endif %}
            </a>
        </div>
        <div class="collapse navbar-collapse" id="pmi-navbar-collapse">
            <ul class="nav navbar-nav">
                {% if is_granted('ROLE_USER') and app.session.get('site') %}
                    <li><a href="/participants">Participant Lookup</a></li>
                    <li><a href="/orders">Biobank Order Lookup</a></li>
                    <li><a href="/review">Participant Review</a></li>
                    {% if app.session.get('siteOrganization') %}
                        <li><a href="/workqueue">Work Queue</a></li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_AWARDEE') and app.session.get('awardee') and awardeeOrganization %}
                    <li><a href="/workqueue">Work Queue</a></li>
                {% endif %}
                {% if is_granted('ROLE_DV_ADMIN') %}
                    <li><a href="/problem/reports">Problem Reports</a></li>
                {% endif %}
                {% if is_granted('ROLE_USER') and app.session.get('site') and isDvType and reportKitUrl %}
                    <li><a data-href="{{ app.reportKitUrl }}" class="external-link">Report Kit Problem</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="/admin">Admin</a></li>
                {% endif %}
                {% if is_granted('ROLE_DASHBOARD') %}
                    <li><a href="/dashboard">Dashboard</a></li>
                {% endif %}
                {% if is_granted('ROLE_SCRIPPS') %}
                    <li><a href="/biobank">Scripps</a></li>
                {% elseif is_granted('ROLE_BIOBANK')  %}
                    <li><a href="/biobank">Biobank</a></li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if app.session.get('site') %}
                        <li>
                            <a href="#" data-toggle="modal" data-target="#siteModal" title="Current site">
                                <i class="fa fa-hospital-o" aria-hidden="true"></i>
                                {{ app.getCurrentSiteDisplayName()|default(app.session.get('site').name) }}
                            </a>
                        </li>
                    {% endif %}

                    {% if app.session.get('awardee') %}
                        <li>
                            <a href="#" data-toggle="modal" data-target="#siteModal" title="Current site">
                                <i class="fa fa-hospital-o" aria-hidden="true"></i>
                                {{ app.session.get('awardee').name }}
                            </a>
                        </li>
                    {% endif %}

                    {% if path_exists('help_home') %}
                        <li class="dropdown">
                            <a href="/help_home" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-question-circle" aria-hidden="true"></i> <span class="visible-xs-inline">Help</span><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/help_videos"><i class="fa fa-film" aria-hidden="true"></i> Training Videos</a></li>
                                <li><a href="/help_faq"><i class="fa fa-question-circle-o" aria-hidden="true"></i> Technical FAQs</a></li>
                                <li><a href="/help_sop"><i class="fa fa-file-text-o" aria-hidden="true"></i> All of Usâ„  SOPs</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    <li class="dropdown">
                        <a href="/settings" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i> {{ app.user.email|default('') }} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/settings"><i class="fa fa-cog" aria-hidden="true"></i> Settings</a></li>
                            <li><a data-href="https://docs.google.com/forms/d/e/1FAIpQLScc_wOGZtGeb-qruWztngFm5oarQUlECsMw_7G6siHq9DmIPA/viewform" class="external-link"><i class="fa fa-comment" aria-hidden="true"></i> Feedback</a></li>
                            <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% if isTraining %}
    <div class="navbar-warning alert alert-warning">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        This portal is to be used for training with fake data only. <strong>No real participant data should ever be entered into this system.</strong>
    </div>
{% endif %}
<div class="{% block bodycontainer %}container{% endblock %}">
    {% if global_notices is defined and global_notices|length > 0 %}
        {% for notice in global_notices %}
            <div class="alert alert-warning">
                {{ notice.message|raw }}
            </div>
        {% endfor %}
    {% endif %}
    <div id="flash-notices">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ flashMessage }}</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-info"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ flashMessage }}</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ flashMessage }}</div>
        {% endfor %}
    </div>

    {% block body %}{% endblock %}
</div>

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="modal fade" id="siteModal" tabindex="-1" role="dialog" aria-labelledby="siteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="POST" action="/selectSite">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="siteModalLabel">Current site</h4>
                    </div>
                    <div class="modal-body">
                        {% if app.user.sites|length == 0 and app.user.awardees|length == 0 %}
                            <span class="text-danger">You do not belong to any HPO sites!</span>
                        {% else %}
                            <select class="form-control" name="site">
                                {% for site in app.user.sites %}
                                    <option value="{{ site.email }}"{{ (app.session.get('site') and app.session.get('site').email == site.email) ? ' selected' : ''}} >{{ app.getSiteDisplayName(site.id, false)|default(site.name) }}</option>
                                {% endfor %}
                                {% for awardee in app.user.awardees %}
                                    <option value="{{ awardee.email }}"{{ (app.session.get('awardee') and app.session.get('awardee').email == awardee.email) ? ' selected' : ''}} >{{ awardee.name }}</option>
                                {% endfor %}
                            </select>
                        {% endif %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        {% if app.user.sites|length > 0 or app.user.awardees|length > 0 %}
                            <button type="submit" class="btn btn-primary">Switch</button>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}

<div id="is-xs" class="visible-xs"></div>
{% include 'base-body.html.twig' %}

<script src="{{ asset('dist/js/all.min.js') }}?v={{ assetVer }}"></script>
{% block pagejs %}{% endblock %}
</body>
</html>
