{% extends 'base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('symfony_home') }}">Home</a></li>
        <li><a href="{{ path('access_manage_dashboard') }}">Managed Access Dashboard</a></li>
        <li><a href="{{ path('access_manage_user_groups') }}">My Groups</a></li>
        <li class="active">{{ group.name }}</li>
    </ol>
    <div class="page-header">
        <h2><i class="fa fa-users" aria-hidden="true"></i> User Management</h2>
    </div>
    <h3>{{ group.name }}</h3>
    <a href="{{ path('access_manage_user_group_member', { groupId: group.id }) }}" class="btn btn-primary pull-right"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add New Member</a>
    <br/><br/>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th>Pmi-Ops Credentials</th>
            <th>Role</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for member in members %}
            {% if member.email is not empty %}
                <tr>
                    <td>{{ member.email }}</td>
                    <td>{{ member.role }}</td>
                    <td><a href="{{ path('access_manage_user_group_remove_member', { groupId: group.id, memberId: member.id }) }}" class="btn btn-xs btn-danger">Remove</a></td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <br/>
{% endblock %}

{% block pagejs %}
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                order: [[0, 'asc']],
                pageLength: 25,
                columnDefs: [
                    {targets: 2, orderable: false}
                ]
            });
        });
    </script>
{% endblock %}
