{% extends 'base.html.twig' %}
{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-check-circle" aria-hidden="true"></i> Patient Status Import Details</h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Participant Id</th>
                    <th>Patient Status</th>
                    <th>Comments</th>
                    <th>Organization</th>
                    <th>Created</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for patientStatusHistory in patientStatusHistories %}
                    <tr>
                        <td>{{ patientStatusHistory.patientStatus.participantId }}</td>
                        <td>{{ patientStatusHistory.status }}</td>
                        <td>{{ patientStatusHistory.comments }}</td>
                        <td>{{ patientStatusImport.organization.name }} ({{ patientStatusImport.organization.id }})</td>
                        <td>{{ patientStatusHistory.createdTs|date('n/j/Y g:ia', app.user.getInfo.timezone)  }}</td>
                        <td>
                            {% if patientStatusHistory.rdrStatus == 1 %}
                                Success
                            {% elseif patientStatusHistory.rdrStatus == 2 %}
                                Failed
                            {% else %}
                                In Progress
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
