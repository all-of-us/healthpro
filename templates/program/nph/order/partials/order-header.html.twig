<div class="page-header">
    <h2>
        <i class="fa fa-medkit" aria-hidden="true"></i>
        {{ order.createdTs|date('n/j/Y', app.user.timezone) }}
        <small>
            <a href="{{ path('nph_participant_summary', { participantId: participant.id }) }}">
                {{ participant.lastName }}, {{ participant.firstName }}
            </a>
        </small>
    </h2>
</div>
<p class="lead">
    Order ID: <strong>{{ order.orderId }}</strong>
</p>
<div class="row" id="order_info" data-order-id="{{ order.orderId }}">
    <div class="col-sm-7">
        {% include 'program/nph/order/partials/participant-details.html.twig' %}
    </div>
    <div class="col-sm-5 text-center">
        <strong class="text-primary">
            Module {{ order.module }} | Visit {{ order.visitType }} | {{ timePoints[order.timepoint] }} | {{ order
            .orderType|capitalize }}
        </strong>
        <div><svg id="order-barcode"></svg></div>
    </div>
</div>