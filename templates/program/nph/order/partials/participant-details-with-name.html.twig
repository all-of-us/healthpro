<div class="row">
    <div class="col-md-4">
        <div><strong>Name</strong></div>
        <div>
            <a role="button" href="{{ path('nph_participant_summary', {participantId: participant.id}) }}">
                {{ participant.lastName }}, {{ participant.firstName }} {{ participant.middleName }}
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div><strong>Participant ID</strong></div>
        <div>{{ participant.id }}</div>
    </div>
    <div class="col-md-4">
        <div><strong>Biobank ID</strong></div>
        <div>{{ participant.biobankId }}</div>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-4">
        <div><strong>DOB</strong></div>
        <div>{{ participant.dob ? participant.dob|date('n/j/Y') }}</div>
    </div>
    <div class="col-md-4">
        <div><strong>Gender Identity</strong></div>
        <div>{{ participant.genderIdentity|default('--') }}</div>
    </div>
    <div class="col-md-4">
        <div><strong>Site</strong></div>
        <div>{{ participant.nphPairedSite ? siteInfo.getNphSiteDisplayName(participant.nphPairedSiteSuffix) : '(not paired)' }}</div>
    </div>
</div>
