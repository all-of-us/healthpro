{% extends 'program/nph/biobank/base.html.twig' %}
{% block title %}Participants - {% endblock %}
{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-user" aria-hidden="true"></i> Participant Lookup</h2>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <hr class="visible-xs"/>
            <h3><i class="fa fa-list-ol" aria-hidden="true"></i> Find by ID</h3>
            {{ form_start(idForm, { attr: { class: 'prevent-resubmit' } }) }}
            {{ form_widget(idForm) }}
            <p>
                <button type="submit" class="btn btn-primary">Go</button>
            </p>
            {{ form_end(idForm) }}
        </div>
    </div>
{% endblock %}
