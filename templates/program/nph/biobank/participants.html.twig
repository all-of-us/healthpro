{% extends 'program/nph/biobank/base.html.twig' %}
{% block title %}Participants - {% endblock %}
{% block body %}
    {% form_theme idForm 'bootstrap_5_layout.html.twig' %}
    <div class="page-header border-bottom mb-2">
        <h2><i class="fa fa-user" aria-hidden="true"></i> Participant Lookup</h2>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h3><i class="fa fa-list-ol" aria-hidden="true"></i> Find by ID</h3>
            {{ form_start(idForm, { attr: { class: 'prevent-resubmit' } }) }}
            <label for="{{ idForm.biobankId.vars.id }}" class="form-label fw-bold mb-0">{{ form_label(idForm.biobankId) }}</label>
            {{ form_widget(idForm.biobankId) }}
            {{ form_errors(idForm.biobankId) }}
            <button type="submit" class="btn btn-primary mt-2">Go</button>
            {{ form_end(idForm) }}
        </div>
    </div>
{% endblock %}
