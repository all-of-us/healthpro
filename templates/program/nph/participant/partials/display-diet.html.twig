{% if moduleNumber in [2, 3] %}
<span class="visit-diet">
    {% set visitDiet = visit['visitDiet'] %}
    {% if participant.module2DietStatus[visitDiet] is not defined %}
        <span class="text-danger"><i class="fa fa-times"></i> Diet Not Assigned</span>
    {% elseif participant.module2DietStatus[visitDiet] == constant('App\\Helper\\NphParticipant::DIET_DISCONTINUED') %}
        <span class="text-discontinue"><i class="fa fa-minus-circle"></i> Diet Discontinued</span>
    {% elseif participant.module2DietStatus[visitDiet] == constant('App\\Helper\\NphParticipant::DIET_COMPLETED') %}
        <span class="text-success"><i class="fa fa-check"></i> Diet Completed</span>
    {% elseif participant.module2DietStatus[visitDiet] == constant('App\\Helper\\NphParticipant::DIET_STARTED') %}
        <span class="text-primary"><i class="fa fa-arrow-circle-left"></i> Diet Assigned</span>
    {% endif %}
</span>
{% endif %}
