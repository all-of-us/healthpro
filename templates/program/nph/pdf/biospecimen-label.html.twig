<div style="width: 100%; height: 15%; font-size: 20px; margin-bottom: 5px">
    <div align="left" style="width: 65%; float: left">{{ PatientName }}</div>
    <div align="left" style="float: right; width: 35%">{{ dob }}</div>
</div>
<div style="height: 40%; margin-top: 15px">
    <div style="margin-bottom: 10px; margin-left: 25px; width: 25%; float: left">
        <img src="var:datamatrix"/>
    </div>
    <div style="height: 15%; width: 45%; font-size: 20px; margin-bottom: 0; margin-left: 0; justify-content: right; float: left; margin-top: 5px">
        <div>{{ SpecimenID }}</div>
        <div style="font-size: 20px; font-weight: bold;">{{ SampleCode }}</div>
    </div>
</div>
{% if 'DLW' in VisitType  %}
    <div style="height: 15%; font-size: 20px; margin-bottom: 5px" align="center">
        <div align="left" style="width: 5%; float: left;">M{{ ModuleNum }}</div>
        <div align="center" style="width: 55%; float: right">{{ TimePoint }}</div>
        <div align="right" style="width: 35%; float: right">{{ VisitType }}</div>
    </div>
{% else %}
    <div style="height: 15%; font-size: 20px; margin-bottom: 5px" align="center">
        <div align="left" style="width: 10%; float: left;">M{{ ModuleNum }}</div>
        <div align="right" style="width: 45%; float: left">{{ VisitType }}</div>
        <div align="center" style="width: 45%; float: left">{{ TimePoint }}</div>
    </div>
{% endif %}
<div>
    <div align="left" style="font-size: 20px; height: 15%; width: 100%; float: left">Date/Time:__________________</div>
</div>

