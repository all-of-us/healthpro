{% extends 'base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active"><a href="{{ path('idVerificationImport') }}">ID Verification Import</a></li>
        <li class="active">ID Verification Import Confirmation</li>
    </ol>
    <div class="page-header">
        <h2><i class="fa fa-check-circle" aria-hidden="true"></i> ID Verification Import Confirmation</h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if rowsCount > 100 %}
                <p class="alert-info well-sm text-center">Displaying first 100 rows from {{ rowsCount }} rows</p>
            {% endif %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Participant ID</th>
                    <th>User</th>
                    <th>Date</th>
                    <th>Verification Type</th>
                    <th>Visit Type</th>
                </tr>
                </thead>
                <tbody>
                {% for importIdVerification in importIdVerifications %}
                    <tr>
                        <td>{{ importIdVerification.participantId }}</td>
                        <td>{{ importIdVerification.userEmail }}</td>
                        <td>{{ importIdVerification.verifiedDate|date('m/d/Y') }}</td>
                        <td>{{ importIdVerification.verificationType }}</td>
                        <td>{{ importIdVerification.visitType }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(importConfirmForm, { attr: { class: 'warn-unsaved disable-enter prevent-resubmit' } }) }}
            {{ form_errors(importConfirmForm) }}
            {{ form_widget(importConfirmForm.Confirm) }} {{ form_widget(importConfirmForm.Cancel) }}
            {{ form_rest(importConfirmForm) }}
            {{ form_end(importConfirmForm) }}
        </div>
    </div>
{% endblock %}
