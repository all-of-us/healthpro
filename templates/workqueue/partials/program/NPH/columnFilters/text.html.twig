
<div class="col-sm-3 d-none">
    <div class="card">
        <div class="card-header">
            <label for="{{ column.getColumnDisplayName|replace({' ': '_'})|lower }}">{{ column.getColumnDisplayName }}</label>
        </div>
        <div class="card-body">
            <div>
                <button class="btn-close text-danger position-absolute top-0 end-0 m-2"></button>
            </div>
            <div class="mt-1">
                <input class="wq-text-input" data-filter-type="text" type="text" name="{{ column.getDataField }}"
                       id="{{ column.getColumnDisplayName|replace({' ': '_'})|lower }}"
                       data-field="{{ column.getDataField }}">
            </div>
        </div>
    </div>
</div>

