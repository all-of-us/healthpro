{% extends 'render-base.html.twig' %}
{% block title %} On-Site Details Patient Status {% endblock %}
{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-clipboard-list" aria-hidden="true"></i> On-Site Details Reporting</h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="{{ path('on_site_patient_status') }}">Patient Status</a>
                </li>
            </ul>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-4 dropdown on-site-filters" id="patient_status_filters">
            <form>
                <ul class="nav navbar-nav">
                    <li class="columns-filter-group">
                        <button href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                            <i class="fa fa-search" aria-hidden="true"></i> Participant Lookup <b class="caret"></b>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="list-group-item bg-light">
                                    <b>Find by ID</b>
                                    <small class="pull-right">
                                        <a class="date-filter-reset" id="participant_id_filter_reset">
                                            Reset
                                        </a>
                                    </small>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="control-label required" for="participantId">Participant ID</label>
                                        <input type="text" name="participantId" class="form-control" id="participantId"
                                               value="{{ params['participantId']|default('') }}"
                                               autocomplete="off"
                                               required="required"
                                               data-parsley-required>
                                    </div>
                                    <p class="text-center">
                                        <button type="button" class="btn btn-primary" id="participant_id_filter_apply">
                                            Apply
                                        </button>
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li class="columns-filter-group">
                        <button href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                            <i class="far fa-calendar" aria-hidden="true"></i> Select Dates <b class="caret"></b>
                        </button>
                        <ul class="dropdown-menu on-site-date-filter-dropdown">
                            <li>
                                <div class="list-group-item bg-light">
                                    <b>Select Date(s)</b>
                                    <small class="pull-right">
                                        <a class="date-filter-reset" id="date_filter_reset">
                                            Reset
                                        </a>
                                    </small>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="control-label" for="startDate">Start Date</label>
                                        <input type="text" name="startDate" class="form-control date-filter"
                                               id="startDate"
                                               value="{{ params['startDate']|default('') }}" placeholder="MM/DD/YYYY"
                                               autocomplete="off" data-parsley-date-mdy>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="endDate">End Date</label>
                                        <input type="text" name="endDate" class="form-control date-filter" id="endDate"
                                               value="{{ params['endDate']|default('') }}" placeholder="MM/DD/YYYY"
                                               autocomplete="off" data-parsley-date-mdy>
                                    </div>
                                    <p class="text-center">
                                        <button type="button" class="btn btn-primary" id="date_filter_apply">Apply
                                        </button>
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </form>
        </div>
        <div class="col-md-1 on-site-reset-all">
            <a href="{{ path('on_site_patient_status') }}">Reset All</a>
        </div>
        <div class="col-md-1 col-md-offset-6">
            <a href="{{ path('on_site_patient_status_export') }}" class="btn btn-xs btn-default export"><i
                    class="fa fa-download" aria-hidden="true"></i> Export</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered" id="on_site_patient_status" style="width:100%">
                <thead>
                <tr>
                    <th>Date Created</th>
                    <th>Participant ID</th>
                    <th>User</th>
                    <th>Site</th>
                    <th>Patient Status</th>
                    <th>Notes</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    {{ encore_entry_script_tags('on-site-patient-status') }}
{% endblock %}
