{% extends 'admin/base.html.twig' %}
{% block title %}Participants - {% endblock %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('admin_home') }}">Admin</a></li>
        <li><a href="{{ path('admin_debug_participants') }}">Participant Summary Lookup</a></li>
        <li class="active">{{ participant.participantId|default('Participant') }}</li>
    </ol>
    <div class="page-header">
        <h2><i class="fa fa-user" aria-hidden="true"></i> RDR Participant Summary Details</h2>
    </div>
    <table class="table table-bordered table-striped">
        {% for key,value in participant %}
            <tr>
                <td>{{ key }}</td>
                <td>
                    {% if value is iterable %}
                        <pre>{{ value|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                    {% else %}
                        {{ value }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
