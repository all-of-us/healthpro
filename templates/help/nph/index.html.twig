{% set bootstrapVersion = 5 %}
{% extends 'render-base.html.twig' %}
{% block title %}Help - {% endblock %}
{% block body %}
    <nav class="my-5" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active">Help</li>
        </ol>
    </nav>
    <div class="page-header pb-1 mt-5 mb-4 border-bottom">
        <h2><i class="fa fa-question-circle" aria-hidden="true"></i> Help and Training Resources</h2>
    </div>
    <div class="page-header border-bottom">
        {% include 'help/nph/helptext.html.twig' %}
    </div>
    <br>
    <div class="float-end">
        <a href="{{ nph_feedback_url }}" target="_blank" class="btn btn-sm btn-info">
            <i class="fa fa-comment-dots" aria-hidden="true"></i> Submit Feedback
        </a>
        <a href="{{ report_technical_issue_url }}" target="_blank" class="btn btn-sm btn-warning">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Report a Technical Issue
        </a>
    </div>
    <p class="lead">What would you like to do today?</p>
    <div class="row home-menu">
        <div class="col-sm-6 col-md-4">
            <a href="{{ nphResources.program_mop }}" class="btn btn-lg btn-block border w-100 text-dark">
                <i class="fa fa-files-o" aria-hidden="true"></i>Program MOPs
            </a>
        </div>
        <div class="col-sm-6 col-md-4">
            <a href="{{ path('help_nph_faq') }}" class="btn btn-lg btn-block border w-100 text-dark">
                <i class="fa fa-question-circle-o" aria-hidden="true"></i>Technical FAQs
            </a>
        </div>
        <div class="col-sm-6 col-md-4">
            <a href="{{ path('help_nph_sopView', { id: 'NPH-HealthPro-SOP', language: 'en' }) }}"
               class="btn btn-lg btn-block border w-100 text-dark">
                <i class="fa fa-file-text-o" aria-hidden="true"></i>HealthPro Application SOP
            </a>
        </div>
        <div class="col-sm-6 col-md-4">
            <a href="{{ nphResources.moodle_resources }}" target="_blank" class="btn btn-lg btn-block border w-100 text-dark">
                <i class="fa fa-laptop" aria-hidden="true"></i> HealthPro Moodle Resources
            </a>
        </div>
        <div class="col-sm-6 col-md-4">
            <a href="{{ nphResources.release_notes }}" target="_blank" class="btn btn-lg btn-block border w-100 text-dark">
                <i class="fa fa-sticky-note" aria-hidden="true"></i> HealthPro Release Notes
            </a>
        </div>
    </div>
{% endblock %}
