{% extends 'program/hpo/ppsc/base.html.twig' %}
{% block title %}Physical Measurements Blood Donor Check- {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}
{% block body %}
    <div>
        <div class="page-header pb-1 mb-3 border-bottom">
            <h2>
                <i class="fa fa-clipboard" aria-hidden="true"></i> New Physical Measurements
            </h2>
        </div>
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="card-title h5 mb-0">
                    Pediatric Assent
                </h3>
            </div>
            <div class="card-body">
                {{ form_start(pediatricAssentCheckForm, { attr: {
                    class: 'disable-enter prevent-resubmit',
                    novalidate: 'novalidate'
                } }) }}
                {{ form_errors(pediatricAssentCheckForm) }}

                {{ form_row(pediatricAssentCheckForm.assent) }}

                <p id="assent_message" class="text-danger d-none">
                    <i class="fa fa-exclamation-circle"></i> The participant has not assented. You may not proceed with physical measurements.
                </p>
                <div>
                    <a href="{{ path('participant', { id: participant.id }) }}" class="btn btn-secondary blood-donor-cancel" type="button">Cancel</a>
                    <button type="submit" class="btn btn-primary d-none" id="assent_continue">
                        Continue
                        <span id="spinner" class="spinner-border spinner-border-sm-bs5" style="display: none;"></span>
                    </button>
                </div>
                {{ form_end(pediatricAssentCheckForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block pagejs %}
    {{ encore_entry_script_tags('measurement-pediatric-assent-check') }}
{% endblock %}
