    <div class="row program-select">
        <h4 class="text-center">Please select your program</h4>
        <br>
        <div class="col-md-3 col-md-offset-3">
            <a href="{{ path('program_select', { program: 'nph' }) }}" role="button">
                <img src="{{ asset('img/login/carousel/LogoNPH.jpg') }}" alt="Nutrition for Precision Health">
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('program_select', { program: 'hpo' }) }}" role="button">
                <img src="{{ asset('img/login/carousel/LogoHPRO.jpg') }}" alt="HealthPro">
            </a>
        </div>
    </div>
{% endblock %}
