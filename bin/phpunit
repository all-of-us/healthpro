#!/bin/bash
#
# Script to run phpunit using GAE's PHP environment
#

APP_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."
GAE_PHP_OSX="/Applications/GoogleAppEngineLauncher.app/Contents/Resources/GoogleAppEngine-default.bundle/Contents/Resources/php55/php"

if [ -f "$GAE_PHP_OSX" ]; then
    PHP=$GAE_PHP_OSX
else
    PHP=$(which php)
fi

php_cli.py --php_executable_path="$PHP" $APP_DIR/vendor/phpunit/phpunit/phpunit $APP_DIR/tests/Pmi -c $APP_DIR/phpunit.xml
