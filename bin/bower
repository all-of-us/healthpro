#!/bin/bash
#
# Convenience script to run the Composer-installed version of the `node bower`
# command, passing along all arguments.
#

APP_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."
NODE="${APP_DIR}/vendor/bin/node"
BOWER="${APP_DIR}/node_modules/bower/bin/bower"

$NODE $BOWER "$@"
