runtime: php72

# default is `public/index.php` or `index.php`
entrypoint: serve web/index.php

handlers:
- url: /robots.txt
  static_files: web/robots.txt
  upload: web/robots.txt
  secure: always
- url: /favicon.ico
  static_files: web/favicon.ico
  upload: web/favicon.ico
  secure: always
- url: /assets
  static_dir: web/assets
  secure: always
  http_headers:
    X-Content-Type-Options: nosniff
- url: /build
  static_dir: web/build
  secure: always
  http_headers:
    X-Content-Type-Options: nosniff
- url: /cron/.*
  script: auto
  secure: always
- url: /timeout
  script: auto
  secure: always
- url: /.*
  script: auto
  secure: always
- url: /s/.*
  script: auto
  secure: always

inbound_services:
- warmup

env_variables:
  PMI_ENV: 'dev'
