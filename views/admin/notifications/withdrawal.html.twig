{% extends 'base.html.twig' %}
{% block title %}Withdrawal Notifications - {% endblock %}
{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-bell" aria-hidden="true"></i> Withdrawal Notifications</h2>
    </div>
    <table class="table table-striped table-hover">
        <thead><tr><th>Time</th><th>Organization</th><th># Withdrawn Participants</th><th>Notified Emails</th></tr></thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td data-order="{{ notification.insert_ts }}">{{ notification.insert_ts|date('n/j/Y g:ia', app.userTimezone) }}</td>
                <td>{{ notification.hpo_id }}</td>
                <td>{{ notification.count }}</td>
                <td>{{ notification.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block pagejs %}
<script>
$(document).ready(function() {
    var table = $('table').DataTable({
        order: [[0, 'desc']],
        pageLength: 25
    });
});
</script>
{% endblock %}
