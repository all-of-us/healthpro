{% extends 'base.html.twig' %}
{% block body %}
    <div class="page-header">
        <h2>Welcome!</h2>
    </div>
    <div class="row">
        {% if app.session.get('site') %}
            <div class="col-sm-6 col-md-4{% if not path_exists('help_home') %} col-md-offset-2{% endif %}">
                <a href="{{ path('participants') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-user" aria-hidden="true"></i> Participant Lookup</a>
            </div>
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('orders') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-medkit" aria-hidden="true"></i> Order Lookup</a>
            </div>
        {% endif %}
        {% if (is_granted('ROLE_USER') and app.session.get('site') and app.siteOrganization) or (is_granted('ROLE_AWARDEE') and app.session.get('awardee') and app.awardeeOrganization) %}
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('workqueue_index') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-table" aria-hidden="true"></i> Work Queue</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_DV_ADMIN')%}
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('problem_reports') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Problem Reports</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_USER') and app.session.get('site') and app.isDvType and app.reportKitUrl %}
            <div class="col-sm-6 col-md-4">
                <a data-href="{{ app.reportKitUrl }}" class="btn btn-lg btn-default btn-block external-link">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Report Kit Problem
                </a>
            </div>
        {% endif %}
        {% if path_exists('help_home') %}
            <div class="col-sm-6 col-md-4">
                <a href="{{ path('help_home') }}" class="btn btn-lg btn-default btn-block"><i class="fa fa-question-circle" aria-hidden="true"></i> Help and Training Resources</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
