{% import 'evaluationform/metrics.html.twig' as metrics %}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Blood Pressure
            <span class="toggle-help-image" data-caption="Help content for blood pressure">
                <i class="fa fa-question-circle" aria-hidden="true"></i><span class="sr-only">Help</span>
            </span>
        </h3>
    </div>
    <div class="panel-body">
        <div class="well">
            <div class="row">
                <div class="col-sm-4">
                    {{ metrics.form_row(evaluationForm, schema.fields['blood-pressure-location']) }}
                </div>
                <div class="col-sm-4">
                    {{ metrics.form_row(evaluationForm, schema.fields['blood-pressure-arm-circumference']) }}
                </div>
                <div class="col-sm-4">
                    <strong>Recommended Cuff Size</strong>
                    <p class="lead" id="cuff-size">--</p>
                </div>
            </div>
        </div>
        <div class="row replicate row-equal-height">
            {% for i in 0..2 %}
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p class="text-right"><em>Reading #{{ i + 1 }}</em></p>
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['blood-pressure-systolic'], i) }}
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['blood-pressure-diastolic'], i) }}
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['heart-rate'], i) }}
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['irregular-heart-rate'], i) }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Average</h3>
            </div>
            <div class="panel-body">
                <p class="lead">
                    Blood pressure:
                    <span id="mean-blood-pressure-systolic"></span>
                    /
                    <span id="mean-blood-pressure-diastolic"></span>
                    {{ schema.fields['blood-pressure-systolic'].unit }}
                    <br />
                    Heart rate:
                    <span id="mean-heart-rate"></span>
                    {{ schema.fields['heart-rate'].unit }}
                    <span id="irregular-heart-rate-warning" class="text-danger"></span>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        {{ metrics.form_row(evaluationForm, schema.fields['pregnant']) }}
        {{ metrics.form_row(evaluationForm, schema.fields['wheelchair']) }}
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Height and Weight
            <span class="toggle-help-image" data-img="{{ asset('img/eval/height.png') }}" data-caption="Help content for height and weight">
                <i class="fa fa-question-circle" aria-hidden="true"></i><span class="sr-only">Help</span>
            </span>
        </h3>
    </div>
    <div class="panel-body">
        <div class="row row-equal-height">
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ metrics.form_row(evaluationForm, schema.fields['height-protocol-modification']) }}
                        {{ metrics.form_row(evaluationForm, schema.fields['height']) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ metrics.form_row(evaluationForm, schema.fields['weight-protocol-modification']) }}
                        {{ metrics.form_row(evaluationForm, schema.fields['weight']) }}
                        {{ metrics.form_row(evaluationForm, schema.fields['weight-prepregnancy']) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">BMI</h3>
                    </div>
                    <div class="panel-body">
                        <p class="text-center lead" id="bmi"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default" id="panel-hip-waist">
    <div class="panel-heading">
        <div class="pull-right" id="hip-waist-skip"></div>
        <h3 class="panel-title">
            Hip and Waist Circumference
            <span class="toggle-help-image" data-img="{{ asset('img/eval/waist.png') }}" data-caption="Help content for hip and waist circumference">
                <i class="fa fa-question-circle" aria-hidden="true"></i><span class="sr-only">Help</span>
            </span>
        </h3>
    </div>
    <div class="panel-body">
        <h4>Hip</h4>
        <div class="row replicate row-equal-height">
            {% for i in 0..2 %}
            <div class="col-sm-4">
                <div class="panel panel-default panel-hip-circumference-{{ i + 1 }}">
                    <div class="panel-body">
                        <p class="text-right"><em>Reading #{{ i + 1 }}</em></p>
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['hip-circumference'], i) }}
                        {% if i == 2 %}
                            <p class="text-info">Third measurement is required when first two differ by more than 1 cm</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <hr />
        <h4>Waist</h4>
        <div class="well">
            <div class="row">
                <div class="col-sm-6">
                    {{ metrics.form_row(evaluationForm, schema.fields['waist-circumference-location']) }}
                </div>
                <div class="col-sm-6">
                    {{ metrics.form_row(evaluationForm, schema.fields['waist-circumference-protocol-modification']) }}
                </div>
            </div>
        </div>
        <div class="row replicate row-equal-height">
            {% for i in 0..2 %}
            <div class="col-sm-4">
                <div class="panel panel-default panel-waist-circumference-{{ i + 1 }}">
                    <div class="panel-body">
                        <p class="text-right"><em>Reading #{{ i + 1 }}</em></p>
                        {{ metrics.form_row_replicate(evaluationForm, schema.fields['waist-circumference'], i) }}
                        {% if i == 2 %}
                            <p class="text-info">Third measurement is required when first two differ by more than 1 cm</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <hr />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Average</h3>
            </div>
            <div class="panel-body">
                <p class="lead">
                    Hip Circumference:
                    <span id="mean-hip-circumference"></span>
                    {{ schema.fields['hip-circumference'].unit }}
                    <span id="convert-hip-circumference"></span>

                    <br />
                    Waist Circumference:
                    <span id="mean-waist-circumference"></span>
                    {{ schema.fields['waist-circumference'].unit }}
                    <span id="convert-waist-circumference"></span>
                </p>
            </div>
        </div>
    </div>
</div>
