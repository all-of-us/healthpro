    <div class="panel-heading">
        <div class="pull-right" id="hip-waist-skip"></div>
        <h3 class="panel-title">
            Waist and Hip Circumference
            <span class="toggle-help-image" data-img="{{ asset('img/eval/waist.png') }}" data-caption="Help content for hip and waist circumference">
                <i class="fa fa-question-circle" aria-hidden="true"></i><span class="sr-only">Help</span>
            </span>
        </h3>
    </div>
    <div class="panel-body">
        <h4>Waist</h4>
        <div class="well">
            <div class="row">
                <div class="col-sm-4">
                    {{ metrics.form_row(evaluationForm, schema.fields['waist-circumference-location']) }}
                </div>
            </div>
        </div>
        <div class="row replicate row-equal-height">
            {% for i in 0..2 %}
            <div class="col-sm-4">
                <div class="panel panel-default panel-waist-circumference-{{ i + 1 }}">
                    <div class="panel-body">
                        <p class="text-right"><em>Reading #{{ i + 1 }}</em></p>
                        <div class="modification-block">
                            <div class="modification-affected">
                                {{ metrics.form_row_replicate(evaluationForm, schema.fields['waist-circumference'], i) }}
                                {% if i == 2 %}
                                    <p class="text-info">Third measurement is required when first two differ by more than 1 cm</p>
                                {% endif %}
                            </div>
                            <div class="modification-toggle text-right">
                                <a class="small">Add protocol modification</a>
                            </div>
                            <div class="modification-select" style="display:none">
                                {{ metrics.form_row_replicate(evaluationForm, schema.fields['waist-circumference-protocol-modification'], i) }}
                                <div class="modification-notes" style="display:none">
                                    {{ metrics.form_row_replicate(evaluationForm, schema.fields['waist-circumference-protocol-modification-notes'], i) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <hr />
        <h4>Hip</h4>
        <div class="row replicate row-equal-height">
            {% for i in 0..2 %}
            <div class="col-sm-4">
                <div class="panel panel-default panel-hip-circumference-{{ i + 1 }}">
                    <div class="panel-body">
                        <p class="text-right"><em>Reading #{{ i + 1 }}</em></p>
                        <div class="modification-block">
                            <div class="modification-affected">
                                {{ metrics.form_row_replicate(evaluationForm, schema.fields['hip-circumference'], i) }}
                                {% if i == 2 %}
                                    <p class="text-info">Third measurement is required when first two differ by more than 1 cm</p>
                                {% endif %}
                            </div>
                            <div class="modification-toggle text-right">
                                <a class="small">Add protocol modification</a>
                            </div>
                            <div class="modification-select" style="display:none">
                                {{ metrics.form_row_replicate(evaluationForm, schema.fields['hip-circumference-protocol-modification'], i) }}
                                <div class="modification-notes" style="display:none">
                                    {{ metrics.form_row_replicate(evaluationForm, schema.fields['hip-circumference-protocol-modification-notes'], i) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <hr />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Average</h3>
            </div>
            <div class="panel-body">
                <p class="lead">
                    Waist Circumference:
                    <span id="mean-waist-circumference"></span>
                    {{ schema.fields['waist-circumference'].unit }}
                    <span id="convert-waist-circumference"></span>
                    <small class="text-muted">(average of two closest measures)</small>
                    <br />
                    
                    Hip Circumference:
                    <span id="mean-hip-circumference"></span>
                    {{ schema.fields['hip-circumference'].unit }}
                    <span id="convert-hip-circumference"></span>
                    <small class="text-muted">(average of two closest measures)</small>
                </p>
            </div>
        </div>
    </div>
</div>
