{% extends 'base.html.twig' %}
{% block title %}Today - Participant Review - {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}
{% set missingName = '' %}

{% macro displayDate(type, dateTime) %}
    {% if type %}
        {% if type[dateTime] %}
            {% if 'now'|date('Y-m-d', app.userTimezone) == type[dateTime]|date('Y-m-d', app.userTimezone) %}
                {# previously displayed only time if date is today. leaving this here in case we want to display something different in the future #}
                {{ type[dateTime]|date('n/j/Y g:ia', app.userTimezone) }}
            {% else %}
                {{ type[dateTime]|date('n/j/Y g:ia', app.userTimezone) }}
            {% endif %}
        {% else %}
            <i class="fa fa-times text-danger" aria-hidden="true"></i>
        {% endif %}
    {% endif %}
{% endmacro %}

{% import _self as today %}

{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-list" aria-hidden="true"></i> Participant Review</h2>
    </div>
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Today's Participants</a></li>
        <li role="presentation"><a href="{{ path('review_orders') }}">Unfinalized Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('review_measurements') }}">Unfinalized Physical Measurements</a></li>
        <li role="presentation"><a href="{{ path('review_ordersRecentModify') }}">Recently Modified Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('review_measurementsRecentModify') }}">Recently Modified Physical Measurements</a></li>
    </ul>
    <br />
    <table class="table table-striped table-bordered table-small" id="table-today">
        <thead>
            <tr>
                <th rowspan="2">Participant ID</th>
                <th rowspan="2">Name</th>
                <th colspan="3" class="text-center td-left-border" style="background-color: #f9f9f9">Physical Measurement</th>
                <th colspan="7" class="text-center td-left-border" style="background-color: #f9f9f9">Biobank Order</th>
            </tr>
            <tr>
                <th class="td-left-border">Status</th>
                <th>Created</th>
                <th>Finalized</th>
                <th class="td-left-border">Status</th>
                <th>Order ID</th>
                <th>Created</th>
                <th>Collected</th>
                <th>Processed</th>
                <th>Finalized</th>
                <th>Finalized Samples</th>
            </tr>
        </thead>
        <tbody>
            {% for id, participant in participants %}
                {% set maxCount = max(participant.ordersCount, participant.physicalMeasurementsCount) %}
                {% set rowSpan = 'rowspan =' ~ maxCount %}

                {% for i in 0..maxCount - 1 %}
                    <tr>
                    {% if i == 0 %}
                        <td {{ rowSpan }} class="align-middle"><a href="{{ path('participant', { id: id }) }}">{{ id }}</a></td>
                        {% if participant.participant is defined %}
                            <td {{ rowSpan }} class="align-middle">
                                {% if participant.participant %}
                                    <a href="{{ path('participant', { id: id }) }}">{{ participant.participant.lastName|default('') }}, {{ participant.participant.firstName|default('') }}</a>
                                {% else %}
                                    {{ missingName }}
                                {% endif %}
                            </td>
                        {% else %}
                            <td {{ rowSpan }} data-participant-id="{{ id }}" data-href="{{ path('participant', { id: id }) }}" class="load-name align-middle">
                                <i class="fa fa-spinner fa-spin" aria-hidden="true"></i>
                                <span class="sr-only">Loading...</span>
                            </td>
                        {% endif %}
                    {% endif %}
                    {% set physicalMeasurement = participant.physicalMeasurements[i] is defined ? participant.physicalMeasurements[i] : '' %}
                    <td class="td-left-border">
                        {% if physicalMeasurement %}
                            <nobr>
                                <a href="{{ path('evaluation', { participantId: id, evalId: physicalMeasurement.id }) }}">{{ physicalMeasurement.status }}</a>
                            </nobr>
                        {% endif %}
                    </td>
                    <td>
                        {{ today.displayDate(physicalMeasurement, 'created_ts') }}
                    </td>
                    <td>
                        {% if physicalMeasurement %}
                            {% if physicalMeasurement.h_type != 'unlock' and not (physicalMeasurement.finalized_ts and physicalMeasurement.rdr_id is empty) %}
                                {{ today.displayDate(physicalMeasurement, 'finalized_ts') }}
                            {% else %}
                                <i class="fa fa-times text-danger" aria-hidden="true"></i>
                            {% endif %}
                        {% endif %}
                    </td>
                    {% set order = participant.orders[i] is defined ? participant.orders[i] : '' %}
                    <td class="td-left-border">
                        {% if order %}
                            <nobr>
                                <a href="{{ path('order', { participantId: id, orderId: order.id }) }}">{{ order.status }}</a>
                            </nobr>
                        {% endif %}
                    </td>
                    <td>
                        {% if order %}
                            <a href="{{ path('order', { participantId: id, orderId: order.id }) }}">{{ order.order_id }}</a>
                        {% endif %}
                    </td>
                    <td>
                        {{ today.displayDate(order, 'created_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(order, 'collected_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(order, 'processed_ts') }}
                    </td>
                    <td>
                        {% if order %}
                            {% set showOrderFinalizedTs = order.h_type != 'unlock' and not (order.finalized_ts and order.rdr_id is empty) %}
                            {% if showOrderFinalizedTs %}
                                {{ today.displayDate(order, 'finalized_ts') }}
                            {% else %}
                                <i class="fa fa-times text-danger" aria-hidden="true"></i>
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        {% if order %}
                            {% if showOrderFinalizedTs and order.finalizedSamplesCount is defined %}
                                {{ order.finalizedSamplesCount }}
                            {% else %}
                                <i class="fa fa-times text-danger" aria-hidden="true"></i>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %} 

{% block pagejs %}
<script>
$(document).ready(function() {
    $('.load-name').each(function() {
        var td = $(this);
        $.getJSON({{ path('review_participantNameLookup', { csrf_token: csrf_token('review'), id: '' })|json_encode|raw }} + td.data('participant-id'), function(data) {
            td.empty();
            if (data && data.lastName && data.firstName) {
                var a = $('<a>')
                    .attr('href', td.data('href'))
                    .text(data.lastName + ', ' + data.firstName);
                td.append(a);
            } else {
                td.text({{ missingName|json_encode|raw }});
            }
        })
        .fail(function() {
            td.html('<em>Error loading name</em>');
        });
    });
});
</script>
{% endblock %}
