{% extends 'base.html.twig' %}
{% block bodycontainer %}container-fluid{% endblock %}
{% set missingName = '' %}

{% macro displayDate(participant, entity, dateType) %}
    {% if participant[entity] and participant[entity][dateType] %}
        {% if 'now'|date('Y-m-d', app.userTimezone) == participant[entity][dateType]|date('Y-m-d', app.userTimezone) %}
            {# previously displayed only time if date is today. leaving this here in case we want to display something different in the future #}
            {{ participant[entity][dateType]|date('n/j/Y g:ia', app.userTimezone) }}
        {% else %}
            {{ participant[entity][dateType]|date('n/j/Y g:ia', app.userTimezone) }}
        {% endif %}
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
    {% endif %}
{% endmacro %}

{% import _self as today %}

{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-list" aria-hidden="true"></i> Participant Review</h2>
    </div>
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Today's Participants</a></li>
        <li role="presentation"><a href="{{ path('review_orders') }}">Unfinalized Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('review_measurements') }}">Unfinalized Physical Measurements</a></li>
    </ul>
    <br />
    <table class="table table-striped table-bordered table-small">
        <thead>
            <tr>
                <th rowspan="2">Participant ID</th>
                <th rowspan="2">Name</th>
                <th colspan="3" class="text-center" style="background-color: #f9f9f9">Physical Measurement</th>
                <th colspan="7" class="text-center" style="background-color: #f9f9f9">Biobank Order</th>
            </tr>
            <tr>
                <th>Status</th>
                <th>Created</th>
                <th>Finalized</th>
                <th>Status</th>
                <th>Order ID</th>
                <th>Created</th>
                <th>Collected</th>
                <th>Processed</th>
                <th>Finalized</th>
                <th>Finalized Samples</th>
            </tr>
        <tbody>
            {% for id, participant in participants %}
                <tr>
                    <td><a href="{{ path('participant', { id: id }) }}">{{ id }}</a></td>
                    {% if participant.participant is defined %}
                        <td>
                            {% if participant.participant %}
                                <a href="{{ path('participant', { id: id }) }}">{{ participant.participant.lastName|default('') }}, {{ participant.participant.firstName|default('') }}</a>
                            {% else %}
                                {{ missingName }}
                            {% endif %}
                        </td>
                    {% else %}
                        <td data-participant-id="{{ id }}" data-href="{{ path('participant', { id: id }) }}" class="load-name">
                            <i class="fa fa-spinner fa-spin" aria-hidden="true"></i>
                            <span class="sr-only">Loading...</span>
                        </td>
                    {% endif %}
                    <td>
                        {% if participant.physicalMeasurement %}
                            <nobr>
                                <a href="{{ path('evaluation', { participantId: id, evalId: participant.physicalMeasurement.id }) }}">{{ participant.physicalMeasurementStatus }}</a>
                                {% if participant.physicalMeasurementCount > 1 %}
                                    <i class="fa fa-info-circle" aria-hidden="true" title="More than one physical measurements for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of physical measurements." data-toggle="tooltip"></i>
                                    <span class="sr-only">More than one physical measurements for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of physical measurements.</span>
                                {% endif %}
                            </nobr>
                        {% endif %}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'physicalMeasurement', 'created_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'physicalMeasurement', 'finalized_ts') }}
                    </td>
                    <td>
                        {% if participant.order %}
                            <nobr>
                                <a href="{{ path('order', { participantId: id, orderId: participant.order.id }) }}">{{ participant.orderStatus }}</a>
                                {% if participant.orderCount > 1 %}
                                    <i class="fa fa-info-circle" aria-hidden="true" title="More than one biobank order for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of biospecimen interactions." data-toggle="tooltip"></i>
                                    <span class="sr-only">More than one biobank order for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of biospecimen interactions.</span>
                                {% endif %}
                            </nobr>
                        {% endif %}
                    </td>
                    <td>
                        {% if participant.order %}
                            <a href="{{ path('order', { participantId: id, orderId: participant.order.id }) }}">{{ participant.order.order_id }}</a>
                        {% endif %}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'order', 'created_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'order', 'collected_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'order', 'processed_ts') }}
                    </td>
                    <td>
                        {{ today.displayDate(participant, 'order', 'finalized_ts') }}
                    </td>
                    <td>
                        {% if participant.order and participant.finalizedSamples %}
                            {{ participant.finalizedSamples }}
                        {% else %}
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %} 

{% block pagejs %}
<script>
$(document).ready(function() {
    $('.load-name').each(function() {
        var td = $(this);
        $.getJSON({{ path('review_participantNameLookup', { csrf_token: csrf_token('review'), id: '' })|json_encode|raw }} + td.data('participant-id'), function(data) {
            td.empty();
            if (data && data.lastName && data.firstName) {
                var a = $('<a>')
                    .attr('href', td.data('href'))
                    .text(data.lastName + ', ' + data.firstName);
                td.append(a);
            } else {
                td.text({{ missingName|json_encode|raw }});
            }
        })
        .fail(function() {
            td.html('<em>Error loading name</em>');
        });
    });
});
</script>
{% endblock %}
