{% macro displayConsentPanelStatus(value, time) %}
    {% set consentValues = ['SUBMITTED', 'SUBMITTED_NO_CONSENT', 'SUBMITTED_NOT_SURE', 'SUBMITTED_INVALID'] %}
    {% if value in consentValues %}
        {{ time ? time|date('n/j/Y g:ia', app.userTimezone) : '--' }}
    {% else %}
        (not completed)
    {% endif %}
{% endmacro %}

{% macro displayProgramUpdate(consentCohort, programUpdate, time) %}
    {% if consentCohort != 'COHORT_2' %}
        (Not Applicable)
    {% elseif programUpdate == 'SUBMITTED' %}
        <i class="fa fa-check text-success" aria-hidden="true"></i>
        {{ time ? time|date('n/j/Y g:ia', app.userTimezone) : '--' }}
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
        (review not completed)
    {% endif %}
{% endmacro %}

{% macro displayFirstConsentPanelStatus(value, time, firstTime, type = 'primary') %}
    {% set consentValues = ['SUBMITTED', 'SUBMITTED_NO_CONSENT', 'SUBMITTED_NOT_SURE', 'SUBMITTED_INVALID'] %}
    {% if value in consentValues %}
        {% if firstTime %}
            {{ firstTime|date('n/j/Y g:ia', app.userTimezone) }} {{ type == 'primary' ? '(first agreed to participate)' : '(first agreed to share EHR)' }} <br>
        {% endif %}
        {% if value == 'SUBMITTED' %}
            <i class="fa fa-check text-success" aria-hidden="true"></i>
        {% else %}
            <i class="fa fa-times text-danger" aria-hidden="true"></i>
        {% endif %}
        {{ time ? time|date('n/j/Y g:ia', app.userTimezone) ~ ' (current status)' : '--' }}
    {% else %}
        (not completed)
    {% endif %}
{% endmacro %}
