{% macro displayDate(order, dateType) %}
    {% if order[dateType] %}
        {{ order[dateType]|date('n/j/Y g:ia', app.userTimezone) }}
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
    {% endif %}
{% endmacro %}

{% macro displaySite(siteName, site) %}
    {% if siteName is empty and site is empty %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
    {% else %}
        {{ siteName ? siteName : site }}
    {% endif %}
{% endmacro %}

{% macro displayConsentStatus(value, time) %}
    {% if value == 'SUBMITTED' %}
        <i class="fa fa-check text-success" aria-hidden="true"></i>
        {{ time ? time|date('n/j/Y', app.userTimezone) }} <br/>
        (consented yes)
    {% elseif value == 'SUBMITTED_NO_CONSENT' %}
        <i class="fa fa-check text-danger" aria-hidden="true"></i>
        {{ time ? time|date('n/j/Y', app.userTimezone) }} <br/>
        (refused consent)
    {% elseif value == 'SUBMITTED_NO_SURE' %}
        <i class="fa fa-check text-warning" aria-hidden="true"></i>
        {{ time ? time|date('n/j/Y', app.userTimezone) }} <br/>
        (not sure)
    {% elseif value == 'SUBMITTED_INVALID' %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
        {{ time ? time|date('n/j/Y', app.userTimezone) }} <br/>
        (invalid)
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
        (consent not completed) <br/>
    {% endif %}
{% endmacro %}
