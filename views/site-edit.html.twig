{% extends 'base.html.twig' %}
{% block title %}Edit Site{% endblock %}
{% block body %}
    <div class="page-header">
        <h2>{{  verb }} Site</h2>
    </div>
    <div class="row">
        <div class="col-sm-7">
            {{ form_start(siteForm) }}
            {{ form_rest(siteForm) }}
            <button type="submit" class="btn btn-primary">Save Site</button>
            {% if verb == 'Edit' %}
                <a href="{{ path('deleteSite', { siteId: site.id }) }}" class="btn btn-danger pull-right confirm">Delete Site</a>
            {% endif %}
            {{ form_end(siteForm) }}
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script>
        $('.confirm').on('click', function() {
            return confirm('Are you sure you want to delete the site?');
        });
    </script>
{% endblock %}
