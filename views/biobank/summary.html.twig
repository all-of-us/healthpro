<!doctype html>
<html lang="en">
<head>
    {% include 'base-head.html.twig' %}
    <title>Biobank Changes Summary - HealthPro</title>
</head>
<body>
<div id="biobank-summary">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-id-card-o" aria-hidden="true"></i>
                Biobank Changes Summary
            </h3>
        </div>
        <div class="panel-body">
            <h4>Collected {{ biobankChanges.collected.time is defined ? biobankChanges.collected.time|date('n/j/Y g:ia', app.userTimezone) : ''}}</h4>
            <table class="table">
                {% for sampleDetail in biobankChanges.collected.sample_details %}
                    <tr>
                        <td>{{ sampleDetail.code }}</td>
                        <td>{{ sampleDetail.color }}</td>
                    </tr>
                {% endfor %}
            </table>

            <h4>Processed</h4>
            <table class="table">
                {% for sampleDetail in biobankChanges.processed.sample_details %}
                    <tr>
                        <td>{{ sampleDetail.code }}</td>
                        <td>{{ sampleDetail.color }}</td>
                        {% if sampleDetail.time is defined %}
                            <td>{{ sampleDetail.time|date('n/j/Y g:ia', app.userTimezone) }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>

            <h4>Finalized {{ biobankChanges.finalized.time|date('n/j/Y g:ia', app.userTimezone) }}</h4>
            <table class="table">
                {% for sampleDetail in biobankChanges.finalized.sample_details %}
                    <tr>
                        <td>{{ sampleDetail.code }}</td>
                        <td>{{ sampleDetail.color }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
</body>
</html>
