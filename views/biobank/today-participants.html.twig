{% extends 'base.html.twig' %}
{% block title %}Today - Participant Review - {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}
{% set missingName = '' %}

{% macro displayDate(participant, entity, dateType) %}
    {% if participant[entity] and participant[entity][dateType] %}
        {% if 'now'|date('Y-m-d', app.userTimezone) == participant[entity][dateType]|date('Y-m-d', app.userTimezone) %}
            {# previously displayed only time if date is today. leaving this here in case we want to display something different in the future #}
            {{ participant[entity][dateType]|date('n/j/Y g:ia', app.userTimezone) }}
        {% else %}
            {{ participant[entity][dateType]|date('n/j/Y g:ia', app.userTimezone) }}
        {% endif %}
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
    {% endif %}
{% endmacro %}

{% import _self as today %}

{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-list" aria-hidden="true"></i> Participant Review</h2>
    </div>
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ path('biobank_todayParticipants') }}">Today's Participants</a></li>
        <li role="presentation"><a href="{{ path('biobank_unfinalizedOrders') }}">Unfinalized Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_ordersRecentModify') }}">Recently Modified Biobank Orders</a></li>
    </ul>
    <br />
    <table class="table table-striped table-bordered table-small" id="table-today">
        <thead>
            <tr>
                <th rowspan="2">Participant ID</th>
                <th colspan="7" class="text-center td-left-border" style="background-color: #f9f9f9">Biobank Order</th>
            </tr>
            <tr>
                <th class="td-left-border">Status</th>
                <th>Order ID</th>
                <th>Created</th>
                <th>Collected</th>
                <th>Processed</th>
                <th>Finalized</th>
                <th>Finalized Samples</th>
            </tr>
        </thead>
        <tbody>
            {% for id, participant in participants %}
                <tr>
                    <td><a href="{{ path('biobank_participant', { id: id }) }}">{{ id }}</a></td>
                    <td class="td-left-border">
                        {% if participant.order %}
                            <nobr>
                                <a href="{{ path('biobank_order', { participantId: id, orderId: participant.order.id }) }}">{{ participant.orderStatus }}</a>
                                {% if participant.orderCount > 1 %}
                                    <i class="fa fa-info-circle" aria-hidden="true" title="More than one biobank order for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of biospecimen interactions." data-toggle="tooltip"></i>
                                    <span class="sr-only">More than one biobank order for this participant was edited today. Click on the Participant ID to view the Participant Summary page for full history of biospecimen interactions.</span>
                                {% endif %}
                            </nobr>
                        {% endif %}
                    </td>
                    <td>
                        {% if participant.order %}
                            <a href="{{ path('biobank_order', { participantId: id, orderId: participant.order.id }) }}">{{ participant.order.order_id }}</a>
                        {% endif %}
                    </td>
                    <td data-order="{{ participant.order.created_ts }}">
                        {{ today.displayDate(participant, 'order', 'created_ts') }}
                    </td>
                    <td data-order="{{ participant.order.collected_ts }}">
                        {{ today.displayDate(participant, 'order', 'collected_ts') }}
                    </td>
                    <td data-order="{{ participant.order.processed_ts }}">
                        {{ today.displayDate(participant, 'order', 'processed_ts') }}
                    </td>
                    <td data-order="{{ participant.order.finalized_ts }}">
                        {% set showOrderFinalizedTs = participant.order and participant.order.h_type != 'unlock' and not (participant.order.finalized_ts and participant.order.rdr_id is empty) %}
                        {% if showOrderFinalizedTs %}
                            {{ today.displayDate(participant, 'order', 'finalized_ts') }}
                        {% else %}
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                    <td>
                        {% if showOrderFinalizedTs and participant.finalizedSamples %}
                            {{ participant.finalizedSamples }}
                        {% else %}
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %} 

{% block pagejs %}
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                order: [[3, 'desc']],
                pageLength: 25
            });
        });
    </script>
{% endblock %}
