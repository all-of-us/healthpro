{% extends 'base.html.twig' %}
{% block title %}Orders - Participant Review - {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}

{% import 'biobank/partials/display.html.twig' as today %}

{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-list" aria-hidden="true"></i> Participant Review</h2>
    </div>
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ path('biobank_ordersToday') }}">Today's Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_ordersUnfinalized') }}">Unfinalized Biobank Orders</a></li>
        <li role="presentation" class="active"><a href="{{ path('biobank_ordersUnlocked') }}">Unlocked Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_ordersRecentModify') }}">Recently Modified Biobank Orders</a></li>
    </ul>
    <br />
    <table class="table table-striped table-bordered table-small">
        <thead>
        <tr>
            {% if is_granted('ROLE_SCRIPPS') %}
                <th>Participant ID</th>
            {% endif %}
            <th>Order ID</th>
            <th>Biobank ID</th>
            <th class="col-created">Created</th>
            <th>Created Site</th>
            <th>Collected</th>
            <th>Collected Site</th>
            <th>Processed</th>
            <th>Processed Site</th>
            <th>Finalized</th>
            <th>Finalized Site</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                {% if is_granted('ROLE_SCRIPPS') %}
                    <td>
                        <a href="{{ path('biobank_participant', { biobankId: order.biobank_id }) }}">{{ order.participant_id }}</a>
                    </td>
                {% endif %}
                <td>
                    <a href="{{ path('biobank_order', { biobankId: order.biobank_id, orderId: order.id }) }}">{{ order.order_id }}</a>
                </td>
                <td>
                    <a href="{{ path('biobank_participant', { biobankId: order.biobank_id }) }}">{{ order.biobank_id }}</a>
                </td>
                <td data-order="{{ order.created_ts }}">
                    {{ today.displayDate(order, 'created_ts') }}
                </td>
                <td>
                    {{ today.displaySite(order.created_site_name) }}
                </td>
                <td data-order="{{ order.collected_ts }}">
                    {{ today.displayDate(order, 'collected_ts') }}
                </td>
                <td>
                    {{ today.displaySite(order.collected_site_name) }}
                </td>
                <td data-order="{{ order.processed_ts }}">
                    {{ today.displayDate(order, 'processed_ts') }}
                </td>
                <td>
                    {{ today.displaySite(order.processed_site_name) }}
                </td>
                <td>
                    {% if order.oh_type != 'unlock' %}
                        {{ today.displayDate(order, 'finalized_ts') }}
                    {% else %}
                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        <span class="badge">Unlocked</span>
                    {% endif %}
                </td>
                <td>
                    {{ today.displaySite(order.finalized_site_name) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block pagejs %}
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                order: [[$('.col-created').index(), 'desc']],
                pageLength: 25
            });
        });
    </script>
{% endblock %}
