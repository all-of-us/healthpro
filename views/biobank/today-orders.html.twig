{% extends 'base.html.twig' %}
{% block title %}Today - Participant Review - {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}
{% set missingName = '' %}

{% macro displayDate(order, dateType) %}
    {% if order[dateType] %}
        {{ order[dateType]|date('n/j/Y g:ia', app.userTimezone) }}
    {% else %}
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
    {% endif %}
{% endmacro %}

{% import _self as today %}

{% block body %}
    <div class="page-header">
        <h2><i class="fa fa-list" aria-hidden="true"></i> Participant Review</h2>
    </div>
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ path('biobank_todayOrders') }}">Today's Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_unfinalizedOrders') }}">Unfinalized Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_unlockedOrders') }}">Unlocked Biobank Orders</a></li>
        <li role="presentation"><a href="{{ path('biobank_ordersRecentModify') }}">Recently Modified Biobank Orders</a></li>
    </ul>
    <br />
    <table class="table table-striped table-bordered table-small" id="table-today">
        <thead>
            <tr>
                <th>Order ID</th>
                <th class="td-left-border">Status</th>
                <th>Created</th>
                <th>Collected</th>
                <th>Processed</th>
                <th>Finalized</th>
                <th>Finalized Samples</th>
            </tr>
        </thead>
        <tbody>
            {% for id, order in orders %}
                <tr>
                    <td>
                        <a href="{{ path('biobank_order', { biobankId: order.biobank_id, orderId: order.id }) }}">{{ order.order_id }}</a>
                    </td>
                    <td class="td-left-border">
                        <nobr>
                            <a href="{{ path('biobank_order', { biobankId: order.biobank_id, orderId: order.id }) }}">{{ order.orderStatus }}</a>
                        </nobr>
                    </td>
                    <td data-order="{{ order.created_ts }}">
                        {{ today.displayDate(order, 'created_ts') }}
                    </td>
                    <td data-order="{{ order.collected_ts }}">
                        {{ today.displayDate(order, 'collected_ts') }}
                    </td>
                    <td data-order="{{ order.processed_ts }}">
                        {{ today.displayDate(order, 'processed_ts') }}
                    </td>
                    <td data-order="{{ order.finalized_ts is defined }}">
                        {% set showOrderFinalizedTs = order.finalized_ts and order.h_type != 'unlock' and not (order.finalized_ts and order.rdr_id is empty) %}
                        {% if showOrderFinalizedTs %}
                            {{ today.displayDate(order, 'finalized_ts') }}
                        {% else %}
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                    <td>
                        {% if showOrderFinalizedTs and order.finalizedSamples %}
                            {{ order.finalizedSamples }}
                        {% else %}
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %} 

{% block pagejs %}
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                order: [[3, 'desc']],
                pageLength: 25
            });
        });
    </script>
{% endblock %}
