<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">X</button>
    <h3>Patient Status History</h3>
</div>
<div class="modal-body">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ app.getOrganizationDisplayName(organization) }}</h3>
                    </div>
                    <div class="panel-body">
                        {% if orgPatientStatusHistoryData is not empty %}
                            {% for field in orgPatientStatusHistoryData %}
                                <dl class="dl-horizontal">
                                    <dt>Status</dt>
                                    <dd>{{ field.status }}</dd>
                                    <dt>User</dt>
                                    <dd>{{ field.user_email }}</dd>
                                    <dt>Site</dt>
                                    <dd>{{ field.site_name }}</dd>
                                    <dt>Date</dt>
                                    <dd>{{ field.created_ts|date('n/j/Y g:ia', app.userTimezone) }}</dd>
                                    <dt>Comments</dt>
                                    <dd>{{ field.comments }}</dd>
                                </dl>
                                <hr>
                            {% endfor %}
                        {% else %}
                            No History Found
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
