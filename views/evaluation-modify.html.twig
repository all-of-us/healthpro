{% extends 'base.html.twig' %}
{% block title %}Physical Measurements - {% endblock %}
{% block body %}
    <div id="physicalEvaluation">
        <div class="page-header">
            <h2 class="{% if type == 'cancel' %} text-danger {% elseif type == 'restore' %} text-success {% else %} text-primary {% endif %}">
                <i class="fa fa-clipboard" aria-hidden="true"></i>
                {{ type|capitalize }} Physical Measurement
                <small><a href="{{ path('participant', { id: participant.id }) }}">{{ participant.lastName }}, {{ participant.firstName }}</a></small>
            </h2>
        </div>
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>{{ participant.lastName }}, {{ participant.firstName }}</dd>
            <dt>Participant ID</dt>
            <dd>{{ participant.id }}</dd>
            <dt>DOB</dt>
            <dd>{{ participant.dob ? participant.dob|date('n/j/Y') }}</dd>
            <dt>Gender Identity</dt>
            <dd>{{ participant.genderIdentity }}</dd>
            {% if evaluation %}
                <dt>Updated</dt>
                <dd>{{ evaluation.updated_ts|date('n/j/Y g:ia', app.userTimezone) }}</dd>
                {% if evaluation.version != latestVersion %}
                    <dt>Version</dt>
                    <dd>{{ evaluation.version }} <small class="text-muted">(latest version is {{ latestVersion }})</small></dd>
                {% endif %}
            {% endif %}
            <dt>Paired Awardee</dt>
            <dd>{{ participant.awardee ? app.getAwardeeDisplayName(participant.awardee) : '(not paired)' }}</dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-8">
            {% include 'partials/participant-evaluation-summary.html.twig' %}
        </div>
        <div class="col-sm-4">
            {% include 'partials/participant-evaluation-list.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_start(evaluationModifyForm, { attr: { class: 'warn-unsaved disable-enter prevent-resubmit' } }) }}
            {{ form_errors(evaluationModifyForm) }}
            {{ form_rest(evaluationModifyForm) }}
            <p>
                <a href="{{ path('participant', { id: participant.id }) }}" class="btn btn-default">Exit</a>
                <button type="submit" name="reportable" class="btn {% if type == 'cancel' %} btn-danger {% elseif type == 'restore' %} btn-success {% else %} btn-primary {% endif %}">{{ type|capitalize }} Measurement</button>
            </p>
            {{ form_end(evaluationModifyForm) }}
        </div>
    </div>
{% endblock %}
