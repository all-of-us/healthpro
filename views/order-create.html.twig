{% extends 'base.html.twig' %}
{% block body %}
    <div class="page-header">
        <h2>
            <i class="fa fa-medkit" aria-hidden="true"></i>
            New order
            <small>{{ participant.lastName }}, {{ participant.firstName }} #{{ participant.id }}</small>
        </h2>
    </div>
    <div>
        <p class="lead">Create order for this participant?</p>
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>{{ participant.lastName }}, {{ participant.firstName }}</dd>
            <dt>DOB</dt>
            <dd>{{ participant.dob|date('n/j/Y') }}</dd>
            <dt>Gender</dt>
            <dd>{{ participant.gender }}</dd>
            <dt>Biobank ID</dt>
            <dd>{{ participant.id }}</dd>
        </dl>
        {{ form_start(confirmForm) }}
            {{ form_widget(confirmForm) }}
            <p><a href="{{ path('participant', { id: participant.id }) }}" class="btn btn-default">No</a> <button type="submit" class="btn btn-primary">Yes</button></p>
        {{ form_end(confirmForm) }}

    </div>
{% endblock %}
