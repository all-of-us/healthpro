{% extends 'base.html.twig' %}
{% block title %}Unanticipated Problem Reports - {% endblock %}
{% block bodycontainer %}container-fluid{% endblock %}
{% block body %}
    <div class="page-header">
        <h2>Unanticipated Problem Reports</h2>
    </div>
    <table class="table table-striped table-bordered table-small" id="problem_reports" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Problem Type</th>
                <th>Enrollment Site</th>
                <th>Staff Name</th>
                <th>Problem Date</th>
                <th>Action Taken</th>
                <th>Created</th>
                <th>Finalized</th>
                <th>Comments</th>
                <th>Last Comment</th>
                <th class="no-sort"></th>
            </tr>
        </thead>
        <tbody>
            {% for problem in problems %}
                <tr>
                    <td><a href="{{ path('problem_details', {problemId: problem.id }) }}" target="_blank">{{ problem.id }}</a></td>
                    <td>{{ problem.problem_type }}</td>
                    <td>{{ problem.enrollment_site }}</td>
                    <td>{{ problem.staff_name }}</td>
                    <td>{{ problem.problem_date ? problem.problem_date|date('m/d/Y') }}</td>
                    <td>{{ problem.action_taken }}</td>
                    <td>{{ problem.created_ts ? problem.created_ts|date('m/d/Y') }}</td>
                    <td>{{ problem.finalized_ts ? problem.finalized_ts|date('m/d/Y') }}</td>
                    <td>{{ problem.comment_count }}</td>
                    <td>{{ problem.last_comment_ts ? problem.last_comment_ts|date('m/d/Y') }}</td>
                    <td><a href="{{ path('problem_details', {problemId: problem.id }) }}" target="_blank">View Details</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block pagejs %}
<script>
$(document).ready(function() {
    var table = $('#problem_reports').DataTable({
        order: [],
        pageLength: 25,
        columnDefs: [
            { orderable: false, targets: -1 }
        ]
    });
});
</script>
{% endblock %}
