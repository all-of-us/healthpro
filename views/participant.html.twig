{% extends 'base.html.twig' %}
{% block body %}
    <div class="page-header">
        <h2>{{ participant.lastName }}, {{ participant.firstName }} <small>#{{ participant.id }}</small></h2>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-clipboard" aria-hidden="true"></i> Physical Evaluation</h3>
                </div>
                <div class="panel-body">
                    <a href="#" class="btn btn-block btn-lg btn-default disabled"><i class="fa fa-plus-circle" aria-hidden="true"></i> Start Exam</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-medkit" aria-hidden="true"></i> Biobank Orders</h3>
                </div>
                <div class="panel-body">
                    {% for order in orders %}
                        <a href="{{ path('participantOrder', { participantId: participant.id, orderId: order.id }) }}" class="btn btn-block btn-lg btn-default">
                            {{ order.created_ts|date('n/j/Y g:ia') }}<br />
                            <small class="text-muted">{{ order.mayo_id }}</small>
                        </a>
                    {% endfor %}
                    <a href="{{ path('participantOrderCreate', { participantId: participant.id }) }}" class="btn btn-block btn-lg btn-default"><i class="fa fa-plus-circle" aria-hidden="true"></i> New Order</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
