<?xml version="1.0" encoding="UTF-8"?>
<orders xmlns="{{ mayoUrl }}">
	<order>
		<collected>{{ options.collected_at }}</collected>
		<account>{{ options.mayoClientId }}</account>
		<number>{{ options.order_id }}</number>
		<patient>
			<medical_record_number>{{ options.biobank_id }}</medical_record_number>
			<first_name>{{ options.first_name }}</first_name>
			<last_name>{{ options.biobank_id }}</last_name>
			<middle_name/>
			<birth_date>{{ options.birth_date }}</birth_date>
			<gender>{{ options.gender }}</gender>
			<address1/>
			<address2/>
			<city/>
			<state/>
			<postal_code/>
			<phone/>
			<account_number/>
			<race/>
			<ethnic_group/>
		</patient>
		<physician>
			<name/>
			<phone/>
			<npi/>
		</physician>
		<report_notes/>
		<tests>
			{% for sample in samples %}
				<test>
					<code>{{ sample.code }}</code>
					<name>{{ sample.name }}</name>
					<comments/>
					{% if sample.questionCode is defined %}
						<questions>
							<question>
								<code>{{ sample.questionCode }}</code>
								<prompt>{{ sample.questionPrompt }}</prompt>
								<answer>{{ sample.questionAnswer }}</answer>
							</question>
						</questions>
					{% endif %}
				</test>
			{% endfor %}
		</tests>
		<comments/>
	</order>
</orders>